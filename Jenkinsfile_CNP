#!groovy
@Library('Infrastructure') _

node {
    env.PATH = "$env.PATH:/usr/local/bin"

    stage('Checkout') {
        deleteDir()
        checkout scm
    }

    stage('Terraform init') {
        dir('example/simple') {
            sh '''
              tfenv install
              terraform --version
              terraform init
            '''
        }
    }

    stage('Terraform Linting Checks') {
        sh 'terraform validate'

        sh 'terraform fmt --check --recursive'
    }
}
